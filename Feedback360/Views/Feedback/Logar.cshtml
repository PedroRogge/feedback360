<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">

        @if(TempData["ErroAoLogar"] != null)
        {
        <div class="alert alert-danger">
            <b>@TempData["ErroAoLogar"]</b>
        </div>
        }
        <form action="~/Feedback/Logar" method="post">
            <div class="form-group">
                <b>Login</b>
                <input type="text" class="form-control" name="UsuarioLogin" id="UsuarioLogin" />
            </div>
            <div class="form-group">
                <b>Senha</b>
                <input type="password" class="form-control" name="UsuarioSenha" id="UsuarioSenha" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Entrar" />
            </div>
        </form>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

